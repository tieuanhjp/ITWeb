@model ITWebManagement.Models.Purchase
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-container">
    <h2 class="mb-4"><i class="fas fa-plus me-2"></i>Thêm mua hàng</h2>
    <form asp-action="Create" method="post" novalidate>
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <div class="mb-3">
            <label asp-for="AssetCode" class="form-label">Mã thiết bị</label>
            <select asp-for="AssetCode" class="form-control" name="AssetCode">
                @foreach (var assetCode in ViewBag.AssetCodes)
                {
                    <option value="@assetCode">@assetCode</option>
                }
            </select>
            <span asp-validation-for="AssetCode" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Quantity" class="form-label">Số lượng</label>
            <input asp-for="Quantity" class="form-control" name="Quantity" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="UnitPrice" class="form-label">Đơn giá</label>
            <input asp-for="UnitPrice" class="form-control" name="UnitPrice" />
            <span asp-validation-for="UnitPrice" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Time" class="form-label">Thời gian</label>
            <input asp-for="Time" class="form-control" type="date" name="Time" />
            <span asp-validation-for="Time" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Department" class="form-label">Bộ phận</label>
            <input asp-for="Department" class="form-control" name="Department" />
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="SupplierID" class="form-label">Nhà cung cấp</label>
            <select asp-for="SupplierID" class="form-control" name="SupplierID">
                @foreach (var supplierID in ViewBag.SupplierIDs)
                {
                    <option value="@supplierID">@supplierID</option>
                }
            </select>
            <span asp-validation-for="SupplierID" class="text-danger"></span>
        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-custom">Thêm</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}