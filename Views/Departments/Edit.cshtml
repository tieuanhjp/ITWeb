@model ITWebManagement.Models.Department
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-container">
    <h2 class="mb-4"><i class="fas fa-edit me-2"></i>Sửa bộ phận</h2>
    <form asp-action="EditDepartment" method="post" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="DepartmentCode" name="DepartmentCode" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <div class="mb-3">
            <label asp-for="DepartmentCode" class="form-label">Mã bộ phận</label>
            <input asp-for="DepartmentCode" class="form-control" name="DepartmentCode" disabled />
            <span asp-validation-for="DepartmentCode" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DepartmentName" class="form-label">Tên bộ phận</label>
            <input asp-for="DepartmentName" class="form-control" name="DepartmentName" />
            <span asp-validation-for="DepartmentName" class="text-danger"></span>
        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-custom">Lưu</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}