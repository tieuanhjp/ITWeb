@model ITWebManagement.Models.Department
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-container">
    <h2 class="mb-4"><i class="fas fa-trash me-2"></i>Xóa bộ phận</h2>
    <h4>Bạn có chắc muốn xóa bộ phận này?</h4>
    <div class="card p-3 mb-3">
        <dl class="row">
            <dt class="col-sm-3">Mã bộ phận</dt>
            <dd class="col-sm-9">@Model.DepartmentCode</dd>
            <dt class="col-sm-3">Tên bộ phận</dt>
            <dd class="col-sm-9">@Model.DepartmentName</dd>
        </dl>
    </div>
    <form asp-action="DeleteDepartment">
        <input type="hidden" asp-for="DepartmentCode" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a href="/Config/RegisterDepartment" class="btn btn-secondary ms-2">Hủy</a>
    </form>
</div>