@model ITWebManagement.Models.Department
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-container">
    <h2 class="mb-4"><i class="fas fa-building me-2"></i>Sửa bộ phận</h2>
    <form asp-action="EditDepartment">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="DepartmentCode" />
        <div class="mb-3">
            <label asp-for="DepartmentName" class="form-label">Tên bộ phận</label>
            <input asp-for="DepartmentName" class="form-control" />
            <span asp-validation-for="DepartmentName" class="text-danger"></span>
        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-custom">Lưu</button>
        </div>
    </form>
    <div class="mt-3">
        <a href="/Config/RegisterDepartment" class="btn btn-secondary">Quay lại</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}