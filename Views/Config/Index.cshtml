@{
    ViewData["Title"] = "Cấu hình";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-container">
    <h2 class="mb-4"><i class="fas fa-cog me-2"></i>Cấu hình</h2>
    <div class="row">
        <div class="col-md-4 mb-3">
            <a asp-action="RegisterDevice" class="btn btn-primary btn-block"><i class="fas fa-desktop me-2"></i>Quản lý mã thiết bị</a>
        </div>
