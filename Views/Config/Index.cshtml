            <a asp-action="RegisterDepartment" class="btn btn-primary btn-block"><i class="fas fa-building me-2"></i>Quản lý bộ phận</a>
        </div>
        <div class="col-md-4 mb-3">
            <a asp-action="RegisterSupplier" class="btn btn-primary btn-block"><i class="fas fa-truck me-2"></i>Quản lý nhà cung cấp</a>
        </div>
    </div>
</div>