@model ITWebManagement.Models.Supplier
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-container">
    <h2 class="mb-4"><i class="fas fa-truck me-2"></i>Thêm NCC</h2>
    <form asp-action="RegisterSupplierCreate" asp-controller="Config">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <div class="mb-3">
            <label asp-for="SupplierID" class="form-label">Mã nhà cung cấp</label>
            <input asp-for="SupplierID" class="form-control" />
            <span asp-validation-for="SupplierID" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="SupplierName" class="form-label">Tên nhà cung cấp</label>
            <input asp-for="SupplierName" class="form-control" />
            <span asp-validation-for="SupplierName" class="text-danger"></span>
        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-custom">Thêm</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}