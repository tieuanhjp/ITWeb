@model ITWebManagement.Models.Device
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-container">
    <h2 class="mb-4"><i class="fas fa-trash me-2"></i>Xóa thiết bị</h2>
    <h4>Bạn có chắc muốn xóa thiết bị này?</h4>
    <div class="card p-3 mb-3">
        <dl class="row">
            <dt class="col-sm-3">Mã tài sản</dt>
            <dd class="col-sm-9">@Model.AssetCode</dd>
            <dt class="col-sm-3">Model</dt>
            <dd class="col-sm-9">@Model.Model</dd>
            <dt class="col-sm-3">Bộ phận</dt>
            <dd class="col-sm-9">@Model.Department</dd>
            <dt class="col-sm-3">Tình trạng</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>
    </div>
    <form asp-action="DeleteDevice">
        <input type="hidden" asp-for="AssetCode" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a href="/Config/RegisterDevice" class="btn btn-secondary ms-2">Hủy</a>
    </form>
</div>