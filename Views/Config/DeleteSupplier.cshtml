@model ITWebManagement.Models.Supplier
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-container">
    <h2 class="mb-4"><i class="fas fa-trash me-2"></i>Xóa NCC</h2>
    <h4>Bạn có chắc muốn xóa NCC này?</h4>
    <div class="card p-3 mb-3">
        <dl class="row">
            <dt class="col-sm-3">Mã nhà cung cấp</dt>
            <dd class="col-sm-9">@Model.SupplierID</dd>
            <dt class="col-sm-3">Tên nhà cung cấp</dt>
            <dd class="col-sm-9">@Model.SupplierName</dd>
        </dl>
    </div>
    <form asp-action="DeleteSupplier">
        <input type="hidden" asp-for="SupplierID" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a href="/Config/RegisterSupplier" class="btn btn-secondary ms-2">Hủy</a>
    </form>
</div>