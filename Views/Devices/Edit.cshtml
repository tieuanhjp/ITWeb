@model ITWebManagement.Models.Device
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-container">
    <h2 class="mb-4"><i class="fas fa-edit me-2"></i>Sửa thiết bị</h2>
    <form asp-action="Edit" method="post" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="AssetCode" name="AssetCode" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <div class="mb-3">
            <label asp-for="AssetCode" class="form-label">Mã thiết bị</label>
            <input asp-for="AssetCode" class="form-control" name="AssetCode" disabled />
            <span asp-validation-for="AssetCode" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Model" class="form-label">Model</label>
            <input asp-for="Model" class="form-control" name="Model" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="StartDate" class="form-label">Ngày bắt đầu</label>
            <input asp-for="StartDate" class="form-control" type="date" name="StartDate" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="EndDate" class="form-label">Ngày kết thúc</label>
            <input asp-for="EndDate" class="form-control" type="date" name="EndDate" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Depreciation" class="form-label">Khấu hao (%)</label>
            <input asp-for="Depreciation" class="form-control" name="Depreciation" />
            <span asp-validation-for="Depreciation" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Department" class="form-label">Bộ phận</label>
            <input asp-for="Department" class="form-control" name="Department" />
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Status" class="form-label">Trạng thái</label>
            <input asp-for="Status" class="form-control" name="Status" />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-custom">Lưu</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}